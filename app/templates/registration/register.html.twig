{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}
    <form method="post">
        <h1 class="h3 mb-3 font-weight-normal">{{ 'register.title'|trans }}</h1>

        {{ form_start(registrationForm) }}
        <div class="form-group">
            <label for="registrationForm_email">{{ 'registrationForm.email'|trans }}</label>
            {{ form_widget(registrationForm.email) }}
        </div>
        <div class="form-group">
            <label for="registrationForm_password_first">{{ 'registrationForm.password.first'|trans }}</label>
            {{ form_widget(registrationForm.password.first) }}
        </div>
        <div class="form-group">
            <label for="registrationForm_password_second">{{ 'registrationForm.password.second'|trans }}</label>
            {{ form_widget(registrationForm.password.second) }}
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group">
            <button class="btn btn-primary ms-2" type="submit">{{ 'register.submit'|trans }}</button>
            <a href="{{ path('shorten_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-secondary">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
        {{ form_end(registrationForm) }}
    </form>
{% endblock %}
