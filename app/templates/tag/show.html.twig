{% extends 'base.html.twig' %}

{% block title %}{{ 'title.record_view'|trans }} {{ record.id }}{% endblock %}

{% block body %}

    {% if record is defined %}
        <h3>{{ 'label.id'|trans }}: {{ record.id }}</h3>
        <h3>{{ 'label.title'|trans }}</h3>
        <p>{{ record.title }}</p>
        <h3>{{ 'label.created_at'|trans }}</h3>
        <p>{{ record.createdAt|date('Y-m-d') }}</p>
        <h3>{{ 'label.updated_at'|trans }}</h3>
        <p>{{ record.updatedAt|date('Y-m-d') }}</p>
        <h3>{{ 'label.shorten_to_tag'|trans }}</h3>
        <p>
            {% for shorten in record.shorten %}
                <a href="{{ path('link_index', {shortenOut: shorten.shortenOut}) }}" target="_blank">{{ shorten.shortenIn }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
        <a href="{{ path('tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    {% else %}
        <p>{{ 'message.record_not_exist'|trans }}</p>
    {% endif %}

{% endblock %}
